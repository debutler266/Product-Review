<%= simple_form_for @product, :html => { :multipart => true } do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select a Category') %>
<%= f.file_field :book_img %>
<%= f.input :title, label: "Product Title" %>
<%= f.input :description %>
<%= f.input :brand %>
<%= f.button :submit %>
<% end %>
