<h2><%= @product.title %></h2>
<h4><%= @product.brand %></h4>
<p><%= @product.description %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>

<% if @product.user_id == current_user.id %>

<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: "Sure you want to delete this product?" } %>
<% end %>
<% end %>
